# Knowledge Assistant Environment Configuration
# Copy this file to .env and fill in your values

# =================================
# OpenAI Configuration (Required)
# =================================

# Your OpenAI API key - Get one at https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI model to use (gpt-4o, gpt-4o-mini, gpt-4-turbo, or gpt-3.5-turbo)
OPENAI_MODEL=gpt-4o-mini

# Temperature for response generation (0.0 = deterministic, 1.0 = creative)
OPENAI_TEMPERATURE=0.3

# Maximum tokens in the response
OPENAI_MAX_TOKENS=1024

# =================================
# Embedding Configuration
# =================================

# Sentence Transformer model for embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Embedding dimension (384 for all-MiniLM-L6-v2)
EMBEDDING_DIMENSION=384

# =================================
# RAG Configuration
# =================================

# Number of documents to retrieve for context
TOP_K_RESULTS=5

# Minimum similarity score for document retrieval (0.0 - 1.0)
SIMILARITY_THRESHOLD=0.3

# =================================
# Application Settings
# =================================

# Application name
APP_NAME=Knowledge Assistant

# Application version
APP_VERSION=1.0.0

# Enable debug mode (true/false)
DEBUG=false

# Vector store path (for persistence)
VECTOR_STORE_PATH=./data/vector_store
